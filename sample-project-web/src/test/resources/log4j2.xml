<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout alwaysWriteExceptions="true" pattern="[%d{yyyy-MM-dd HH:mm:ss.SSS} %5p %c:%L] %m%n"/>
        </Console>
    </appenders>
    <loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
        </Root>
    </loggers>

</configuration>